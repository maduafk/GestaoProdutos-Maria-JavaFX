<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.sla.Controller.VendaController" spacing="10"
      style="-fx-padding: 15;">

    <HBox spacing="10">
        <Button text="Voltar" onAction="#voltarParaProdutos"/>
    </HBox>

    <GridPane hgap="10" vgap="10">
        <Label text="Produto:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <ComboBox fx:id="cbProdutos" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="200"/>

        <Label text="Quantidade:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="txtQuantidade" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Button text="Adicionar Item" onAction="#adicionarItem" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    </GridPane>

    <TableView fx:id="tabelaItens">
        <columns>
            <TableColumn fx:id="colCodigo" text="Código" prefWidth="100"/>
            <TableColumn fx:id="colNome" text="Nome" prefWidth="200"/>
            <TableColumn fx:id="colPreco" text="Preço Unitário" prefWidth="100"/>
            <TableColumn fx:id="colQuantidade" text="Quantidade" prefWidth="80"/>
        </columns>
    </TableView>

    <GridPane hgap="10" vgap="10">
        <Label text="Total da Venda:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="txtTotal" editable="false" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Valor Recebido:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="txtValorRecebido" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Button text="Calcular Troco" onAction="#calcularTroco" GridPane.rowIndex="2" GridPane.columnIndex="0"/>

        <Label text="Troco:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="txtTroco" editable="false" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    </GridPane>

    <Button text="Finalizar Venda" onAction="#finalizarVenda"/>
</VBox>